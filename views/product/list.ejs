<!DOCTYPE html>
<html>
<head>
    <title>Product List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold">Product List</h3>
        <a href="/products/add" class="btn btn-primary">+ Add Product</a>
    </div>
    <div class="card">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (products.length > 0) { %>
                        <% products.forEach(prod => { %>
                            <tr>
                                <td><%= prod.ProductID %></td>
                                <td><%= prod.ProductName %></td>
                                <td>â‚¹<%= prod.Price.toFixed(2) %></td>
                                <td><%= prod.CategoryName %></td>
                                <td class="text-center">
                                    <a href="/products/edit/<%= prod.ProductID %>" class="btn btn-warning btn-sm me-1">Edit</a>
                                    <a href="/products/delete/<%= prod.ProductID %>" class="btn btn-danger btn-sm" onclick="return confirm('Delete this product?')">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center text-muted p-3">No products found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
</html>
